{% extends 'base.html.twig' %}

{% block title %}Backend{% endblock %}

{% block content %}
            <div class="card border-0 shadow mx-auto mt-4" style="max-width: 400px;background: rgba(255, 255, 255, .85)">
                <div class="card-body">
                    <h2 class="h4 mb-4">Log in to admin area</h2>

                    <form action="{{ path('login') }}" method="post">
                        {% if error %}
                            <div class="alert small alert-danger">
                                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            </div>
                        {% endif %}

                        <div class="input-group mb-3"><i class="ci-mail position-absolute top-50 translate-middle-y text-muted fs-base ms-3"></i>
                            <input class="form-control rounded-start" type="email" placeholder="E-mail" name="_username" value="{{ last_username }}" required autofocus>
                        </div>
                        <div class="input-group mb-3"><i class="ci-locked position-absolute top-50 translate-middle-y text-muted fs-base ms-3"></i>
                            <div class="password-toggle w-100">
                                <input class="form-control" type="password" placeholder="Password" name="_password" required>
                            </div>
                        </div>

                        <div class="text-center pt-4">
                            <button class="btn btn-dark" type="submit">Log in</button>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    </form>
                </div>
            </div>

            <p class="text-center mt-5">
                <a href="{{ path('api_doc') }}" class="btn btn-lg btn-light m-3">API docs</a>
            </p>
{% endblock %}
